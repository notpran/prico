{
  "name": "prico-monorepo",
  "version": "1.0.0",
  "description": "Discord-level chat + VSCode-level collaborative editor + GitHub-level publishing platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "cd web && npm run dev",
    "dev:server": "cd server/socket-server && npm run dev",
    "build": "npm run build:web && npm run build:server",
    "build:web": "cd web && npm run build",
    "build:server": "cd server/socket-server && npm run build",
    "test": "npm run test:web && npm run test:server",
    "test:web": "cd web && npm test",
    "test:server": "cd server/socket-server && npm test",
    "lint": "npm run lint:web && npm run lint:server",
    "lint:web": "cd web && npm run lint",
    "lint:server": "cd server/socket-server && npm run lint",
    "type-check": "npm run type-check:web && npm run type-check:server",
    "type-check:web": "cd web && npm run type-check",
    "type-check:server": "cd server/socket-server && npm run type-check"
  },
  "workspaces": [
    "web",
    "server/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}